// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",     /* Recommended React Native TSConfig base */
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "node",
    /* Skip type checking all .d.ts files. */
    "baseUrl": ".",
    "paths": {
      "app/*": ["app/*/index", "app/*"],
      "assets/*" : ["app/assets/*"],
      "components/*" : ["components/*"],
      "config/*" : ["app/config/*"],
      "screens/*" : ["sreens/*"],
      "store/*" : ["app/store/*"],
      "types/*" : ["app/types/*"],
    },
  }
}
